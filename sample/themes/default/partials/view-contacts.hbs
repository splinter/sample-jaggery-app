<div>
	
<table class='table well'>
	<thead>
		<tr>
			<th>Id</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Telephone</th>
			<th>Email</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
			<!-- 
			The each helper is a default Handlebars helper which allows an array
			of elements to iterated 
			-->
			{{#each contacts}}
				<tr>
				<td>{{this.id}}</td>
				<td>{{this.fName}}</td>
				<td>{{this.lName}}</td>
				<td>{{this.telephone}}</td>
				<td>{{this.email}}</td>
				<td>
					<a href='{{url "/contact/"}}{{this.id}}'>View</a>
					<a href='{{url "/contact/delete/"}}{{this.id}}'>Delete</a>
					<a href='{{url "/contact/edit/"}}{{this.id}}'>Edit</a>
				</td>
				</tr>
			{{/each}}
			
	</tbody>
</table>

</div>