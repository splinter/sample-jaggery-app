<form id='form-delete-contact'>

	<legend>Id: </legend>
	<input type='text' id='id' readonly="true" value="{{this.id}}">

	<legend>First Name: </legend>
	<input type='text' id='fName' readonly="true" value="{{this.fName}}">

	<legend>Last Name: </legend>
	<input type='text' id='lName' readonly="true" value="{{this.lName}}">

	<legend>Telephone: </legend>
	<input type='text' id='telephone' readonly="true" value="{{this.telephone}}">

	<legend>Email: </legend>
	<input type='text' id='email' readonly="true" value="{{this.email}}" >

	<a id='btn-delete-contact' class='btn btn-danger'>Delete Contact</a>
</form>
